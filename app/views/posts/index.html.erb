<div class="clearfix">
	<div class="main-post">
		<div class="container post-container">
			<div class="row">

				<!-- 投稿一覧回すeach文 -->
				<%= @posts.each do |post| %>

				<div class="card" style= "margin: 20px; width: 21%; float: left;">
					<table class="table table-hover">
						<tbody>

							<tr align="left">
								<td>
									<a href="<%= "/users/#{post.user.id}" %>">
										<%= attachment_image_tag post, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class: "img-circle" %>
									</a>
								</td>
							</tr>

							<tr align="center">
								<td>
									<a href="<%= "/posts/#{post.id}" %>">
										<%= attachment_image_tag post, :post_image, format: "jpeg", fallback: "no_image.jpg", size: "200x200" %>
									</a>
								</td>
							</tr>

							<tr align="center">
								<td><%= post.tile %></td>
							</tr>

							<tr align="center">
								<td><%= post.appeal %></td>
							</tr>

						</tbody>
					</table>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>