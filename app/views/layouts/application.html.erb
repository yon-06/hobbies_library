<!DOCTYPE html>
<html>
  <head>
    <title>HobbiesLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <!-- 後でlink_toに書き換え -->
      <a class="nav-link navbar-title" href="/" style="color: black; font-size: 25px;">Hobbies Library</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- ユーザーがログインしているか確認 -->
      <% if user_signed_in? %>

      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <%= link_to "投稿一覧", posts_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <%= link_to "ジャンル一覧", genres_index_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <%= link_to "マイページ", user_path(current_user.id), class: "nav-link" %>
          </li>

          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <%= link_to "新規投稿", new_post_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      </div>
      <% else %>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <%= link_to "投稿一覧", posts_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <%= link_to "ジャンル一覧", genres_index_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
      <% end %>
    </nav>
    <%= yield %>
    <footer>
      
    </footer>
  </body>
</html>
