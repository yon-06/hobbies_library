<!DOCTYPE html>
<html>
  <head>
    <title>HobbiesLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <!-- 後でlink_toに書き換え -->
      <a class="navbar-title" href="/">Hobbies Library</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- ユーザーがログインしているか確認 -->
      <%# if user_signed_in? %>

      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <a class="nav-link" href="#">投稿一覧 <span class="sr-only"></span></a>
          </li>
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <a class="nav-link" href="#">ジャンル一覧</a>
          </li>
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <a class="nav-link" href="#">マイページ</a>
          </li>
          <li class="nav-item">
            <!-- 後でlink_toに書き換え -->
            <a class="nav-link" href="#">ログアウト</a>
          </li>
        </ul>
        <span class="navbar-text">
          検索フォーム置く
        </span>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
