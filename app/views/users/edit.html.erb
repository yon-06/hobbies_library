<div class="main-users-edit">
  <div class="container main-container" style="padding-top: 240px;">
    <div class="row">
      <div class="col-md-12">
        <div class="d-flex justify-content-center">
          <div class="rounded">
            <div class="form-header text-center">
                <h1 class="signup_title">ユーザー情報編集</h1>
            </div>
              <div class="form-body">
                <div class="anime">
                <div class="card"  style= "width: 100%;">

                <%= form_for(@user) do |f| %>
                  <table class="table table-hover table-striped">
                  <!-- <colgroup span="1" width="40%"></colgroup>
                  <colgroup span="1" width="60%"></colgroup> -->

                    <thead></thead>

                    <tbody>

                      <tr align="center">
                        <div class="field">
                          <td><%= f.label :ペンネーム %></td>
                          <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
                        </div>
                      </tr>

                      <tr align="center">
                        <div class="field">
                          <td><%= f.label :プロフィール画像 %></td>
                          <td><%= f.attachment_field :profile_image, autofocus: true, autocomplete: "imege" %></td>
                        </div>
                      </tr>

                      <tr align="center">
                        <div class="field">
                          <td><%= f.label :アドレス %></td>
                          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                        </div>
                      </tr>

                    </tbody>
                  </table>

                  <div class="actions">
                    <%= f.submit "変更", class: "anime_test btn btn-success btn-block" %>
                  </div>
                <% end %>

                </div>
              </div>

              <!--<%#= render "devise/shared/links" %>-->

          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
